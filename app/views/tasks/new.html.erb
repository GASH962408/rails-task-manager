<h1>New task</h1>
<%= form_with model: @task, local: true do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :details %><br>
    <%= f.text_area :details %>
  </div>

  <div>
    <%= f.label :completed %><br>
    <%= f.check_box :completed %>
  </div>

  <%= f.submit "Create task" %>
<% end %>
